{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES6",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "preserve",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "**/**.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}